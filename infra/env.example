# PostgreSQL Configuration
POSTGRES_DB=sentinel
POSTGRES_USER=sentinel
POSTGRES_PASSWORD=sentinel

# Application DB URL (dev)
DATABASE_URL=postgresql://sentinel:sentinel@localhost:5432/sentinel?schema=public

# Test DB (docker compose profile: test)
POSTGRES_TEST_DB=sentinel_test
POSTGRES_TEST_USER=sentinel
POSTGRES_TEST_PASSWORD=sentinel
TEST_DATABASE_URL=postgresql://sentinel:sentinel@localhost:5433/sentinel_test?schema=public

# Application Configuration
APP_PORT=3000

# CORS (agent-core)
# Comma-separated list of allowed Origins.
# Default (if unset/empty): http://localhost:3001
# Example:
# CORS_ORIGINS=http://localhost:3001,http://127.0.0.1:3001
CORS_ORIGINS=http://localhost:3001

# Redis (optional KV/limiter backend)
# In Docker Compose, this defaults to redis://redis:6379
# For local (non-compose) runs, you likely want: redis://localhost:6379
REDIS_URL=redis://redis:6379
