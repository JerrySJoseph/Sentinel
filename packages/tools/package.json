{
  "name": "@sentinel/tools",
  "version": "0.1.0",
  "private": true,
  "description": "Tool interface, registry, and built-in tools",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prebuild": "pnpm --filter @sentinel/contracts build",
    "build": "tsc",
    "pretest": "pnpm --filter @sentinel/contracts build",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint \"{src,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,test}/**/*.ts\" --fix",
    "pretypecheck": "pnpm --filter @sentinel/contracts build",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@sentinel/contracts": "workspace:*",
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.5",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  }
}
