{
  "name": "sentinel",
  "version": "0.1.0",
  "private": true,
  "description": "Agent-like AI system as a distributed-ready modular monolith",
  "scripts": {
    "build": "pnpm -r --filter './apps/*' --filter './packages/*' build",
    "build:core": "pnpm --filter agent-core build",
    "build:cli": "pnpm --filter cli build",
    "test": "pnpm -r --filter './apps/*' --filter './packages/*' test",
    "test:watch": "pnpm -r --filter './apps/*' --filter './packages/*' test:watch",
    "lint": "pnpm -r --filter './apps/*' --filter './packages/*' lint",
    "lint:fix": "pnpm -r --filter './apps/*' --filter './packages/*' lint:fix",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\"",
    "clean": "pnpm -r --filter './apps/*' --filter './packages/*' clean",
    "typecheck": "pnpm -r --filter './apps/*' --filter './packages/*' typecheck"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
