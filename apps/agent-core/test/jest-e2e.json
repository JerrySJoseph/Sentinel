{
    "moduleFileExtensions": [
        "js",
        "json",
        "ts"
    ],
    "rootDir": ".",
    "testEnvironment": "node",
    "testRegex": ".e2e-spec.ts$",
    "transform": {
        "^.+\\.ts$": "ts-jest"
    },
    "testTimeout": 10000,
    "moduleNameMapper": {
        "^src/(.*)$": "<rootDir>/../src/$1"
    },
    "globals": {
        "ts-jest": {
            "tsconfig": {
                "types": [
                    "jest",
                    "node"
                ]
            }
        }
    }
}