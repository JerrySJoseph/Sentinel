{
  "name": "agent-core",
  "version": "0.1.0",
  "private": true,
  "description": "NestJS API service for the agent system",
  "main": "dist/main.js",
  "scripts": {
    "prebuild": "pnpm --filter @sentinel/config build && pnpm --filter @sentinel/kv build && pnpm --filter @sentinel/observability build && pnpm --filter @sentinel/agent build",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch --builder webpack",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "pretest": "pnpm --filter @sentinel/config build && pnpm --filter @sentinel/kv build && pnpm --filter @sentinel/observability build && pnpm --filter @sentinel/agent build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "pretest:e2e": "pnpm --filter @sentinel/config build && pnpm --filter @sentinel/kv build && pnpm --filter @sentinel/observability build && pnpm --filter @sentinel/agent build && docker compose -f ../../infra/compose.yml --profile test up -d postgres_test && DATABASE_URL=${TEST_DATABASE_URL:-postgresql://sentinel:sentinel@localhost:5433/sentinel_test?schema=public} pnpm --filter @sentinel/memory prisma:migrate:deploy",
    "test:e2e": "DATABASE_URL=${TEST_DATABASE_URL:-postgresql://sentinel:sentinel@localhost:5433/sentinel_test?schema=public} jest --config ./test/jest-e2e.json",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@nestjs/common": "^10.3.0",
    "@nestjs/core": "^10.3.0",
    "@nestjs/platform-express": "^10.3.0",
    "@sentinel/agent": "workspace:*",
    "@sentinel/config": "workspace:*",
    "@sentinel/contracts": "workspace:*",
    "@sentinel/kv": "workspace:*",
    "@sentinel/memory": "workspace:*",
    "@sentinel/observability": "workspace:*",
    "@sentinel/providers": "workspace:*",
    "@sentinel/tools": "workspace:*",
    "reflect-metadata": "^0.1.14",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@jest/test-sequencer": "^29.7.0",
    "@nestjs/cli": "^10.2.1",
    "@nestjs/schematics": "^10.0.3",
    "@nestjs/testing": "^10.3.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.5",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3",
    "webpack": "^5.97.1",
    "webpack-cli": "^5.1.4"
  }
}